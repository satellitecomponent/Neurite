{
  "name": "neurite-electron",
  "version": "1.0.0",
  "description": "Neurite for desktop.",
  "author": "satellitecomponent",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "set-version": "node scripts/set-version.js"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.9.0",
    "tree-kill": "^1.2.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "electron": "^36.1.0",
    "electron-builder": "^26.0.12"
  },
  "overrides": {
    "glob": "^11.0.1"
  },
  "build": {
    "appId": "com.satellitecomponent.neurite",
    "productName": "Neurite",
    "asar": true,
    "files": [
      "main.js",
      "loading.html",
      "modules/**/*",
      "build/icons/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "satellitecomponent",
        "repo": "neurite"
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg",
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icons/icon.png"
    }
  }
}
